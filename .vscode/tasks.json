{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Launch Taiwind Watcher", // Name of task
            "type": "shell",
            "command": "npx tailwindcss -i ./resources/css/app.css -o ./public/app.css --watch",
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "Launch Cleancss Watcher", // Name of task
            "type": "shell",
            "command": "cleancss -o ./public/app.min.css ./public/app.css --source-map --watch",
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}
