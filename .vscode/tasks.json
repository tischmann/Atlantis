{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start tailwind watcher",
            "type": "shell",
            "command": "npx tailwindcss -i ./resources/tailwind.css -o ./public/css/tailwind.min.css --watch --minify",
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}
